{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "isolatedModules": false,
        "rootDir": "src",
        "outDir": "build"
    },
    "references": [
        {
            "path": "../common"
        }
    ],
    "include": [
        "src"
    ]
}